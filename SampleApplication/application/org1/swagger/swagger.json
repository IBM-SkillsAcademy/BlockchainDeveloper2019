{
  "openapi": "3.0.0",
  "info": {
    "description": "Vehicle Manufacture Sample Application Smart Contract used for creating Blockchain Developer Course V2",
    "version": "1.0.0",
    "title": "Manufacturer"
  },
  "paths": {
    "/api/v1/auth/enroll-admin": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Enroll Admin",
        "responses": {
          "200": {
            "description": "Admin enrolled"
          }
        }
      }
    },
    "/api/v1/auth/register-user": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "enrollmentID"
                ],
                "properties": {
                  "enrollmentID": {
                    "type": "string",
                    "example": "user1"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered"
          }
        }
      }
    },
    "/api/v1/vehicle": {
      "post": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Create a new vehicle",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "orderID",
                  "manufacturer",
                  "model",
                  "color",
                  "owner"
                ],
                "properties": {
                  "orderID": {
                    "type": "string",
                    "example": "vehicle13"
                  },
                  "manufacturer": {
                    "type": "string",
                    "example": "Honda"
                  },
                  "model": {
                    "type": "string",
                    "example": "Accord"
                  },
                  "color": {
                    "type": "string",
                    "example": "Black"
                  },
                  "owner": {
                    "type": "string",
                    "example": "Tom"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vehicle created"
          }
        }
      },
      "get": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Get all vehicles or by id",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }, {
          "in": "query",
          "name": "id",
          "schema": {
            "type": "string",
            "example": "vehicle13:Accord"
          }
        }],
        "responses": {
          "200": {
            "description": "All vehicles listed",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/vehicle/order": {
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "Create a new vehicle order",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "orderID",
                  "manufacturer",
                  "model",
                  "color",
                  "owner"
                ],
                "properties": {
                  "orderID": {
                    "type": "string",
                    "example": "vehicle13"
                  },
                  "manufacturer": {
                    "type": "string",
                    "example": "Honda"
                  },
                  "model": {
                    "type": "string",
                    "example": "Accord"
                  },
                  "color": {
                    "type": "string",
                    "example": "Black"
                  },
                  "owner": {
                    "type": "string",
                    "example": "Tom"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vehicle created"
          }
        }
      },
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Get all vehicle orders or by status",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }, {
          "in": "query",
          "name": "status",
          "schema": {
            "type": "string",
            "enum": [
              "ISSUED",
              "PENDING" ,
              "INPROGRESS",
              "DELIVERED"]
          }
        }],
        "responses": {
          "200": {
            "description": "All vehicles listed",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/vehicle/price": {
      "post": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Update vehicle price",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "vehicleID",
                  "price"
                ],
                "properties": {
                  "vehicleID": {
                    "type": "string",
                    "example": "vehicle13:Accord"
                  },
                  "price": {
                    "type": "string",
                    "example": "40000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vehicle price updated"
          }
        }
      },
      "get": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Get vehicle price",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }, {
          "in": "query",
          "name": "id",
          "schema": {
            "type": "string",
            "example": "vehicle13:Accord"
          }
        }],
        "responses": {
          "200": {
            "description": "Vehicle price listed"
          }
        }
      }
    },
    "/api/v1/vehicle/request-vin": {
      "post": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Request vehicle VIN",
        "parameters": [{
          "in": "header",
          "name": "enrollment-id",
          "required": "true",
          "schema": {
            "type": "string",
            "example": "user1"
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "vehicleID"
                ],
                "properties": {
                  "vehicleID": {
                    "type": "string",
                    "example": "vehicle13:Accord"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vehicle VIN requested"
          }
        }
      }
    }

  },

  "components": {
  }
}